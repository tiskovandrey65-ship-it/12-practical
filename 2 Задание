prices = [1500,500,2000,3500,1000,4500]

max_price = max(prices)
min_price = min(prices)
sum_price = sum(prices)
avg_price = sum_price/len(prices)

print(f"Самая дорогой товар: {max_price}")
print(f"Самый дешёвый товар: {min_price}")
print(f"Общая стоимость товаров: {sum_price}")
print(f"Средняя стоимость товаров: {avg_price}")
